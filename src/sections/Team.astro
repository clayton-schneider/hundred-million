---
import ProfileCard from "@components/cards/ProfileCard.astro";
---

<section class="bg-black px-edge py-16 lg:py-20">
  <div class="max-w-screen-2xl mx-auto">
    <div class="text-text-light text-center">
      <h2 class="font-bebas text-7xl md:text-[100px] leading-none">
        Our <span class="text-priamry">Team</span>
      </h2>
      <p class="text-lg">Description for the team and what you stand for.</p>
    </div>

    <div class="mt-20 grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-11">
      {
        [...Array(6).keys()].map(() => (
          <div class="w-full flex justify-center">
            <ProfileCard />
          </div>
        ))
      }
    </div>
  </div>
</section>
