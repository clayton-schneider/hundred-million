---
import { Image } from "@astrojs/image/components";
import PrimaryBtn from "@components/buttons/PrimaryBtn";
---

<section class="bg-primary overflow-y-hidden px-edge relative">
  <Image
    src={import("@img/home-hero.jpg")}
    alt="hundred million us"
    class="h-full object-cover absolute top-0 right-0 bottom-0 max-w-[50%] w-full"
    quality={90}
  />
  <div class="max-w-screen-2xl mx-auto">
    <div class="my-20 max-w-xl text-white relative z-10">
      <h1 class="font-bebas text-[110px] leading-none">
        Free, Safe,<br /><span class="text-[210px]">Educated</span>
      </h1>
      <p>
        This is just placeholder text. Don’t be alarmed, this is just here to
        fill up space since your finalized copy isn’t ready yet. Once we have
        your content finalized
      </p>
      <PrimaryBtn className="mt-10">Join Us</PrimaryBtn>
    </div>
  </div>
</section>
