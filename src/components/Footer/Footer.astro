---
const involveLinks = [
  { link: "/teachers", text: "Teachers" },
  { link: "/individuals", text: "Individuals" },
  { link: "/organizations", text: "Organizations" },
  { link: "/contact", text: "Contact" },
];

const resourceLinks = [
  { link: "/about", text: "About Us" },
  { link: "/blog", text: "Blog" },
];

const socialLinks = [
  { name: "mdi:twitter", link: "https://twitter.com/100millionus/" },
  { name: "mdi:instagram", link: "https://www.instagram.com/100millionusa/" },
];

const date = new Date();

import { Image } from "astro:assets";
import { Icon } from "astro-icon";
import MailchimpForm from "@components/forms/MailchimpForm";
---

<section class="bg-primary border-t-2 border-t-black text-text-light">
  <footer class="px-edge py-12">
    <div
      class="max-w-screen-2xl mx-auto flex flex-col lg:flex-row items-center lg:items-start justify-between gap-5"
    >
      <div>
        <Image
          src={import("@img/hundred-million-logo-white.png")}
          alt="hundred million logo"
          class="mx-auto lg:mx-0"
        />
        <p class="mt-6 font-bebas text-lg text-center lg:text-left">
          A 100 Million Organizaiton. <a
            href="https://100million.org"
            target="_blank">Visit Parent Org</a
          >
        </p>
        <div class="flex justify-center lg:justify-start space-x-2 mt-6">
          {
            socialLinks.map((link) => (
              <a
                target="_blank"
                aria-label={`social link to: ${link.name}`}
                href={link.link}
              >
                <Icon name={link.name} size={24} class="fill-primary" />
              </a>
            ))
          }
        </div>
      </div>
      <div class="text-center lg:text-left">
        <p class="text-4xl font-bebas">
          Get <span class="text-text-dark">Involved</span>
        </p>
        <ul class="space-y-2">
          {
            involveLinks.map((link) => (
              <li>
                <a href={link.link}>{link.text}</a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="text-center lg:text-left">
        <p class="text-4xl font-bebas">
          Learn <span class="text-text-dark">More</span>
        </p>
        <ul class="space-y-2">
          {
            resourceLinks.map((link) => (
              <li>
                <a href={link.link}>{link.text}</a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="text-center">
        <p class="text-4xl font-bebas">
          Stay <span class="text-text-dark">Up To Date</span>
        </p>

        <MailchimpForm client:load />
      </div>
    </div>
  </footer>
</section>
<div class="px-edge bg-primary-darker py-4">
  <p class="font-bebas text-xl text-center">
    Copyright Â© {date.getFullYear()} 100 Million Us | All Right Reserved | <a
      href="/privacy-policy">Privacy Policy</a
    > | <a href="/terms-and-conditions">Terms and Conditions</a> | Powered By <a
      target="_blank"
      href="https://www.simply-sprout.com">Simply Sprout</a
    >
  </p>
</div>
